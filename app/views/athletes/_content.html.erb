<% @athletes.each_with_index do |a, index| %>
<tr class="tr-athlete-<%= a.id %>">
<td class="athletes no-<%= a.id %> col-md-1"><%= @athletes.offset + index + 1 %></td>
<td class="name col-md-4"><%= a.name %></td>
<td class="city col-md-3"><%= a.city %></td>
<td class="edit col-md-2">
<%= link_to (fa_icon "pencil"), edit_athlete_path(a.id), class: "btn btn-sm btn-warning" %>
<%= link_to (fa_icon "eye"), athlete_path(a.id), class: "btn btn-sm btn-default" %>
<%= link_to (fa_icon "trash"), athlete_path(a), remote: true, method: :delete, data: { confirm: "Apakah anda ingin menghapus ?" }, class: "btn btn-sm btn-danger"  %>
</td>
</tr>
<% end %>